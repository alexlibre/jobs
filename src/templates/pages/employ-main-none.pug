                            .e-days
                                .e-days__left
                                    .e-days__num 23
                                    .e-days__txt Days remained
                                .e-days__right
                                    .button.button--view--ternary.e-days__btn Extend
                    .sidebar__item
                        include ../components/sidebar-menu
            button.button.button--view--primary.inner-page__btn.inner-page__btn--disable.js-btn-mob Menu
            .inner-page__content.inner-page__content--md
                .inner-page__content-inner
                    .inner-page__left
                        .catalog
                            .catalog__txt-block
                                .catalog__txt
                                    |You have not created any vacancies yet. Click on the button below to apply for a job.
                            .catalog__btn
                                button.button.button--view--primary.catalog__btn-file Create vacancy
